{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist",
                "buildCommand": "npm run build"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/client/dist/index.html"
        },
        {
            "rewrites": [
              { "source": "/(.*)", "destination": "/index.html" }
            ]
          }
         
    ]
     
}
