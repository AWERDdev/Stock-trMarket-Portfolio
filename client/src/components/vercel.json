{
  "version": 2,
  "builds": [
      {
          "src": "client/**",
          "use": "@vercel/static-build",
          "config": {
              "distDir": "client/dist",
              "buildCommand": "cd client && npm install && npm run build"
          }
      },
      {
          "src": "API/**",
          "use": "@vercel/node"
      }
  ],
  "routes": [
      {
          "src": "/api/(.*)",
          "dest": "API/index.js"
      },
      {
          "handle": "filesystem"
      },
      {
          "src": "/(.*)",
          "dest": "client/dist/index.html"
      }
  ]
}
